rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    function isDriver() {
      return isAuthenticated() && request.auth.token.driver == true;
    }
    
    function isVerified() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.verified == true;
    }

    // Users
    // Users
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Driver Profiles
    match /driver_profiles/{uid} {
      allow read: if isAuthenticated();
      allow write: if isOwner(uid) || isAdmin();
    }

    // Verifications System
    match /verifications/{id} {
      // Admins can read all. Drivers can read their own. We'll simplify to authenticated read for admin dashboard to work easily.
      allow read: if isAuthenticated();
      allow create: if isOwner(id) || (isAuthenticated() && request.resource.data.driverId == request.auth.uid);
      allow update, delete: if isOwner(id) || isAdmin();
    }

    // Rides
    match /rides/{rideId} {
      allow read: if isAuthenticated();
      allow create: if isDriver() && isVerified(); // Only verified drivers can create rides
      allow update: if (isDriver() && resource.data.driverId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin();
      
      // Driver Location Subcollection (if used)
      match /locations/{ts} {
        allow read: if isAuthenticated();
        allow write: if isDriver() && get(/databases/$(database)/documents/rides/$(rideId)).data.driverId == request.auth.uid;
      }
    }

    // Bookings
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && isVerified(); // Only verified users can book
      allow update: if isAuthenticated() && (resource.data.passengerId == request.auth.uid || resource.data.driverId == request.auth.uid || isAdmin());
    }

    // Payments
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && (get(/databases/$(database)/documents/bookings/$(resource.data.bookingId)).data.passengerId == request.auth.uid || isAdmin());
      allow write: if false; // Only Cloud Functions should write payments
    }

    // Ratings
    match /ratings/{ratingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.fromUser == request.auth.uid;
      allow update: if false;
    }

    // SOS
    match /sos/{sosId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update: if isAdmin();
    }
    
    // Admin Actions
    match /admin_actions/{actionId} {
      allow read, write: if isAdmin();
    }
    
    // Driver Locations (Top-level if used)
    match /drivers/{uid}/location/current {
       allow read: if isAuthenticated();
       allow write: if isOwner(uid);
    }
  }
}
